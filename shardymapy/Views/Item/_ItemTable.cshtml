@model IEnumerable<Sku>

<div class="container mt-5" >
    <h2 class="mb-4 text-center">Lista de Items</h2>

    <table class="table table-striped table-hover shadow-sm rounded">
        
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Fecha Ingreso</th>
            <th>Ancho</th>
            <th>largo</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach(var sku in Model)
        {
            <tr>
                <td>@sku.Id</td>
                <td>@sku.Descripcion</td>
                <td>@(sku.Estado ? "Inactivo" : "Activo")</td>
                <td>@sku.FechaIngreso</td>
                <td>@sku.SkuDataLogistica?.Largo</td>
                <td>@sku.SkuDataLogistica?.Ancho</td>
                <td>
                    <a  href="/item/edit/@sku.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a href="item/delete/@sku.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }

        </tbody>

    </table>
</div>


