@model IEnumerable<shardymapy.Models.User.User>


<div class="container mt-5" >
    <h2 class="mb-4 text-center">Usuarios</h2>

    <table class="table table-striped table-hover shadow-sm rounded">
        <thead class="table-dark">
        <tr>
            <th>username</th>
            <th>nombre</th>
            <th>apellidos</th>
            <th>correos</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.UserProfile?.Nombre</td>
                <td>@user.UserProfile?.Apellidos</td>
                <td>@user.UserProfile?.Correos</td>
                <td>
                    <a href="/item/edit/@user.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a href="/item/delete/@user.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>

        }
        </tbody>
    </table>
</div>