@model Warehouse

@{
    ViewData["Title"] = "warehouseForm";
}

    <div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
            <h3>Registrar Almacen</h3>
        </div>
        <div class="card-body">
            <form asp-action="WarehouseForm" method="post">

                <div class="mb-3">
                    <label class="form-label" for="WarehouseAlias">Nombre</label>
                    <input id="WarehouseAlias" type="text" asp-for="WarehouseAlias" class="form-control" maxlength="20" placeholder="Ingrese un nombre del alamcen" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Lenghtx">lenghtX</label>
                    <input id="Lenghtx" type="number"  step="0.01" asp-for="WarehouseConfiguration.Lenghtx" class="form-control" placeholder="lenghtX" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="widhtY">widhtY</label>
                    <input id="widhtY" type="number" step="0.01" asp-for="WarehouseConfiguration.Widhty" class="form-control" placeholder="widhtY" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="heightZ">heightZ</label>
                    <input id="heightZ" type="number" step="0.01" asp-for="WarehouseConfiguration.Heightz" class="form-control" placeholder="heightZ" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="fechaIngreso">fechaIngreso</label>
                    <input id="fechaIngreso"
                            type="date"
                           asp-for="WarehouseConfiguration.FechaIngreso"
                           class="form-control"
                           placeholder="fechaAutomatica">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="fechaActualizacion">fechaActualizacion</label>
                    <input id="fechaActualizacion"
                           type="date"
                           asp-for="WarehouseConfiguration.FechaActualizacion"
                           class="form-control" >
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-5">Registrar</button>
                </div>

            </form>
        </div>
    </div>
</div>
