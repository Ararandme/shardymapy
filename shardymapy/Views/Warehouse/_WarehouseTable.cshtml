@model IEnumerable<shardymapy.Models.Warehouse.Warehouse>

<div class="container mt-5" >
    <h2 class="mb-4 text-center">Lista de alamacenes</h2>

    <table class="table table-striped table-hover shadow-sm rounded">
        <thead class="table-dark">
        <tr>
            <th>alias</th>
            <th>lenghtX</th>
            <th>widhtY</th>
            <th>heightZ</th>
            <th>Acciones</th>
        </tr>
        </thead>

        <tbody>
        @foreach (var warehouse in Model)
        {
            <tr>
                <td>@warehouse.WarehouseAlias</td>
                <td>@warehouse.WarehouseConfiguration?.Lenghtx</td>
                <td>@warehouse.WarehouseConfiguration?.Widhty</td>
                <td>@warehouse.WarehouseConfiguration?.Heightz</td>
                <td>
                    <a href="/warehouse/WarehouseEdit/@warehouse.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a href="/warehouse/WarehouseDelete/@warehouse.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr> 
        }
 
        </tbody>
    </table>
</div>