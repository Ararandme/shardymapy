@model IEnumerable<shardymapy.Models.Anaquel.AnaquelLineaVistaSuperiorConfiguracion>

<div class="container" >
    <table class="table table-sm table-bordered table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Column Sep.</th>
            <th>Padding</th>
            <th>Block Width X</th>
            <th>Total Width X</th>
            <th>Block Height Y</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.ConfigNombre</td>
                <td>@c.ColumnSeparationWidth</td>
                <td>@c.MiddlePaddingSize</td>
                <td>@c.AnaquelBlockWidhtx</td>
                <td>@c.AnaquelTotalWidthx</td>
                <td>@c.AnaquelBlockHeighty</td>
                <td>
                    <a href="/Anaquel/SuperiorConfigUpdate/@c.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a href="/Anaquel/SuperiorConfigDelete/@c.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
 
        </tbody>
    </table>
</div>